<div class="container p-4 col-md-6">
  <div class="row">
    <div class="card card-body p-4 rounded-10 bg-warning">
      <h3>Editar tarea</h3>
      <form action="/tasks/{{task._id}}/edit" method="post">
        <div class="mb-3">
          <label for="title" class="form-label">Nombre de la tarea:</label>
          <input
            type="text"
            class="form-control"
            id="title"
            placeholder="a침ade un titulo..."
            name="title"
            value="{{task.title}}"
            required
          />
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Descripci칩n</label>
          <textarea
            class="form-control"
            id="description"
            cols="80"
            name="description"
            placeholder="a침ade una descripci칩n..."
          >{{task.description}}</textarea>
        </div>
        {{#if task.tipo}}
          <div class="form-check">
            <input
              class="form-check-input"
              type="radio"
              name="tipo"
              id="individual"
              value="1"
              checked
            />
            <label class="form-check-label" for="flexRadioDefault1">
              Individual
            </label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="radio"
              name="tipo"
              id="equipo"
              value="0"
            />
            <label class="form-check-label" for="flexRadioDefault2">
              Equipo
            </label>
          </div>
        {{else}}
          <div class="form-check">
            <input
              class="form-check-input"
              type="radio"
              name="tipo"
              id="individual"
              value="1"
            />
            <label class="form-check-label" for="flexRadioDefault1">
              Individual
            </label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="radio"
              name="tipo"
              id="equipo"
              value="0"
              checked
            />
            <label class="form-check-label" for="flexRadioDefault2">
              Equipo
            </label>
          </div>
        {{/if}}
        <br />
        <button type="submit" class="btn btn-primary">Actualizar</button>

      </form>
    </div>
  </div>
</div>