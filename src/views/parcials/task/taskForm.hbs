<div>
  <h3>Add Task</h3>
  <form action="/tasks/add" method="post">
    {{! Title input }}
    <div>
      <label>Write a Title:</label>
      <input type="text" id="title" name="title" placeholder="title..." />
    </div>
    {{! Description input }}
    <div>
      <label>Description:</label>
      <textarea
        type="text"
        id="description"
        name="description"
        placeholder="Add a description..."
      ></textarea>
      <button type="submit">Add</button>
    </div>
  </form>
</div>